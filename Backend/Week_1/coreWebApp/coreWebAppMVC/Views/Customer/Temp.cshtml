
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Temp</title>
</head>
<body>
    <h3>@TempData["Message"]</h3>
    <p> There are @TempData["CustomerCount"] customers</p>

    <table>
        <thead>
            <tr>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Customer Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in TempData["CustomerList"] as List<Customer>)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Amount</td>
                </tr>
            }
        </tbody>
    </table>

    @{
        TempData.Keep("Message");
    }

    <a asp-controller="Customer" asp-action="Method2">Go to Method 2</a>
</body>
</html>
