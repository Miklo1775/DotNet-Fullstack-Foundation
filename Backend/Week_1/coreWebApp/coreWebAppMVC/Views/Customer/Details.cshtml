
@{
    ViewData["Title"] = "Details";
    Layout = null;
}

<h1>Details</h1>

<h3>Details ViewData page</h3>

<h3>@ViewData["Message"]</h3>
<p> There are @ViewData["CustomerCount"]</p>

<table>
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Amount</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @ViewData["CustomerList"] as List<Customer>)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Amount</td>
            </tr>
        }
    </tbody>
</table>